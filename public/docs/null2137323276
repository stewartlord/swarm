        <para condition="summary">
          Summary: Get List of Groups 
        </para>

        <section xml:id="api.endpoints.Groups.listGroups.notes">
          <title>Description</title>

          <para>
            Returns the complete list of groups in Swarm. 
          </para>
        </section>
        <section xml:id="api.endpoints.Groups.listGroups.parameters">
          <title>Parameters</title>

          <informaltable>
            <tgroup cols="5">
              <colspec colname="parameter" colwidth="*"/>
