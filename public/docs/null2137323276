      <section xml:id="api.endpoints.Projects.listProjects">
        <title>
          <emphasis role="method">GET</emphasis>
          <emphasis role="path">/api/v2/projects/</emphasis>
        </title>

        <para condition="summary">
          Summary: Get List of Projects 
        </para>

        <section xml:id="api.endpoints.Projects.listProjects.notes">
          <title>Description</title>

          <para>
            Returns the complete list of projects in Swarm. 
          </para>
        </section>
        <section xml:id="api.endpoints.Projects.listProjects.parameters">
          <title>Parameters</title>

