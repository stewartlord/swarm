    <section xml:id="api.endpoints.Activity">
      <title>Activity : Swarm Activity List</title>

      <section xml:id="api.endpoints.Activity.addActivity">
        <title>
          <emphasis role="method">POST</emphasis>
          <emphasis role="path">/api/v2/activity</emphasis>
        </title>

        <para condition="summary">
          Summary: Create Activity Entry 
        </para>

        <section xml:id="api.endpoints.Activity.addActivity.notes">
          <title>Description</title>

          <para>
            Creates an entry in the Activity List. Note: admin-level privileges are required for this action. 
          </para>
        </section>
        <section xml:id="api.endpoints.Activity.addActivity.parameters">
          <title>Parameters</title>

          <informaltable>
            <tgroup cols="5">
              <colspec colname="parameter" colwidth="*"/>
              <colspec colname="description" colwidth="4*"/>
              <colspec colname="type" colwidth="*"/>
              <colspec colname="paramtype" colwidth="*"/>
              <colspec colname="required" colwidth="*"/>
